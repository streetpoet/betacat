=============
Client.java
=============

package sample;

import com.visa.gpd.ConverterHandler;

public class Client {

	public static void main(String[] args) throws Exception {
		args = new String[] { "Vdca" };
		if (args.length == 0) {
			throw new Exception("no arguments provided");
		}
		String namespace = args[0];
		Class clazz = Class.forName("com.visa.gpd." + namespace + "ConverterHandler");
		ConverterHandler handler = (ConverterHandler)clazz.newInstance();
		String result = handler.convert("some string");
	}

}

==================
ConverterHandler
==================

package com.visa.gpd;

public interface ConverterHandler {
	public String convert(String str);
}

======================
ConverterHandlerBase
======================

package com.visa.gpd;

public abstract class ConverterHandlerBase implements ConverterHandler {

	@Override
	public String convert(String str) {
		String meta = createMetaInfo();
		System.out.println(meta);
		System.out.println("here are common processing");
		return "";
	}

	public abstract String createMetaInfo();
}

======================
VdcaConverterHandler
======================

package com.visa.gpd;

public class VdcaConverterHandler extends ConverterHandlerBase implements ConverterHandler {

	@Override
	public String createMetaInfo() {
		return "vdca";
	}

}
